<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Countries</title>
</head>
<body>
    
    <section class="cards-contianer">
        <% data.forEach(item=>{ %>

            <div class="card">
                <h3>Country:<%= item.Country%></h3>
                <p>Total confirmed cases: <%= item.TotalConfirmed%></p>
                <p>Total deaths cases: <%= item.TotalDeaths%></p>
                <p>Total Recovered cases: <%= item.TotalRecovered%></p>
                <p>Date: <%= item.Date%></p>
                <form action="/addRecord" method="POST">
                    <input type="hidden"name="TotalConfirmed" value="<%= item.TotalConfirmed%>">
                    <input type="hidden"name="Country" value="<%= item.Country%>">
                    <input type="hidden"name="TotalDeaths" value="<%= item.TotalDeaths%>">
                    <input type="hidden"name="TotalRecovered" value="<%= item.TotalRecovered%>">
                    <input type="hidden"name="Date" value="<%= item.Date%>">
                    <button>ADD TO MY RECORDS</button>
                </form>
            </div>

    <% })%>

    </section>


</body>
</html>